<Window x:Class="TysindfrydWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TysindfrydWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Label x:Name="LA_Blomsersort" Content="Blomsersorter:" HorizontalAlignment="Left" Margin="5,26,0,0" VerticalAlignment="Top" Width="136"/>
        <TextBlock x:Name="TBL_Blomstersort" HorizontalAlignment="Center" Margin="0,57,0,0" TextWrapping="Wrap" Text="Ingen blomstersorter tilføjet" VerticalAlignment="Top" IsEnabled="True" Background="LightGray" Height="130" Grid.RowSpan="2" Width="280"/>
        <Button x:Name="BT_OBL" Content="Opret Blomstersort" HorizontalAlignment="Center" Margin="0,91,0,0" Grid.Row="1" VerticalAlignment="Top" Click="BT_OBL_Click"/>

    </Grid>
</Window>
